<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
				<h1><%= form_title %></h1>
				<%= form_for @product do |f| %>
				<div class="form-group">
					<%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto"  %>
				</div>
				<div class="form-group">
					<%= f.number_field :price, class: "form-control input-lg", placeholder: "Ingresa el precio del producto" %>
				</div>
				<div class="row">
          <div class="col-sm-12 col-xs-12">
              <div class="form-group">
               <%= f.collection_check_boxes :category_ids, Category.all, :id, :name  do |c| %>
                <div class="checkbox">
   							 <%= c.label do %>
     							 <%= c.check_box %> <%= c.object.name %>
   									 <% end %>
  										</div>
											<% end %>
              </div>
          </div>
      </div>

        <div>
          <br>
          <%=f.submit form_title, class:"btn btn-primary btn-lg btn-block"%>
        </div>
      <%end%>
      <br>
      <%= link_to "Ver la lista de los Productos", products_path, class:" btn btn-primary btn-lg btn-block"%>

		</div>
	</div>
</div>