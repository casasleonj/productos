<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<h1>Productos</h1>
			<div class="text-right"><%=  link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %></div>
				<div class="col-sm-12">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Nombre</th>
								<th scope="col">Precio</th>
								<th scope="col">Categorias</th>
							</tr>
						</thead>
						<tbody>
							<%@products.each do |product|%>
						  <tbody>
						    <tr>
						      <td><%=product.name%></td>
						      <td><%=product.price%></td>
						  	<% product.categories.each do |category|%>
	      					<td><%=category.name%></td>
						  <%end%>
					  			<td><%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_product_path(product.id)%></td>
					 				 <td><%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, product, method: :delete, data: { confirm: "¿Estás seguro de eliminar este Producto?"}%></td>
					    	</tr>
					  	</tbody>
					 			 <%end%>
							</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>