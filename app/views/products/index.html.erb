<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<h1>Productos</h1>
			<div class="text-right"><%=  link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %></div>
				<div class="col-sm-12">
					<table class="table">
					  <thead>
					    <tr>
					      <th>Nombre</th>
					      <th>Precio</th>
					      <th>Categorías</th>
					      <th></th>
					    </tr>
					  </thead>
					  <tbody>
					    <% @products.each do |product| %>
					      <tr>
					        <td><%= product.name %></td>
					        <td><%= number_to_currency(product.price, precision: 0) %></td>
					        <td><%= product.categories.pluck(:name).join(", ") %></td>
					        <td>
											<%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_product_path(product.id)%>
					 				    <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, product, method: :delete, data: { confirm: "¿Estás seguro de eliminar este Producto?"}%>
					        </td>
					      </tr>
					    <% end %>
					  </tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>